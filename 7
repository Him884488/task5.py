def most_frequent_char(input_string):
    # Initialize a dictionary to store character frequencies
    char_freq = {}
    
    # Iterate through the string and count character frequencies
    for char in input_string:
        if char.isalpha():  # Check if the character is a letter (ignore non-alphabetic characters)
            char_freq[char] = char_freq.get(char, 0) + 1
    
    # Find the character with the highest frequency
    most_common_char = max(char_freq, key=char_freq.get)
    
    return most_common_char

# Example usage:
input_string = "hello, world!"
result = most_frequent_char(input_string)
print("Most frequent character:", result)
